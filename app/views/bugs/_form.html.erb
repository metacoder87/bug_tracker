<%= form_with(model: bug) do |form| %>
  <% if bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
        <% bug.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :project %>
    <%= form.text_area :project %>
  </div>

  <div class="field">
    <%= form.label :path %>
    <%= form.text_area :path %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Bug.priorities.keys.map { |priority| [priority.humanize, priority] } %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Bug.statuses.keys.map { |status| [status.humanize, status] } %>
  </div>

  <%# Display the current fixer value (if it exists) %>
  <% if bug.fixer.present? %>
    <div class="field">
      <%= form.label :fixer %>
      <%= bug.fixer %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
